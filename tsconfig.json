{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "es6"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"],
        "@/components/*": ["components/*"],
        "@/pages/*": ["pages/*"],
        "@/context/*": ["context/*"],
        "@/routes/*": ["routes/*"],
        "@/types/*": ["types/*"]
      },
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "incremental": true,
      "declaration": false,
      "declarationMap": false,
      "sourceMap": true
    },
    "include": [
      "src/**/*",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }